<%- layout("/layouts/boilerplate.ejs") %>
<body>
  <div class="form">
    <h1>Edit Your Palace</h1>
    <form
      method="post"
      action="/listing/<%=data._id %>?_method=PUT"
      novalidate
      class="needs-validation">
      <div class="row">
        <div class="col col-8 offset-2">
          <div>
            <label for="title" class="form-label">Title</label>
            <input
              type="text"
              class="form-control"
              id="title"
              name="listing[title]"
              value="<%=data.title %>"
              required />
            <div class="valid-feedback">Looks good</div>
            <div class="invalid-feedback">Please enter valid title</div>
          </div>
          <br />
          <div>
            <label for="description" class="form-label">Your Description</label>
            <textarea
              type="text"
              class="form-control"
              id="description"
              name="listing[description]"
              required>
          <%=data.description %></textarea
            >
            <div class="valid-feedback">Looks good</div>
            <div class="invalid-feedback">Please enter valid description</div>
          </div>
          <br />
          <div class="row">
            <div class="column col-6">
              <label for="price" class="form-label">Price</label>
              <input
                type="number"
                name="listing[price]"
                class="form-control"
                value="<%=data.price %>"
                required />
            </div>
            <br />
            <div class="column col-6">
              <label for="location" class="form-label">Location</label>
              <input
                type="text"
                name="listing[location]"
                class="form-control"
                id="location"
                value="<%=data.location %>"
                required />
              <br />
            </div>
          </div>
          <label for="country" class="form-label"></label>
          <input
            type="text"
            name="listing[Country]"
            id="country"
            value="<%=data.Country%>"
            required />
          <div class="valid-feedback">Looks Good</div>
          <br />
          <button class="edit_btn_create">Create</button>
        </div>
      </div>
    </form>
  </div>
</body>
