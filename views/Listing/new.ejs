<%-layout("/layouts/boilerplate.ejs") %>
<body>
  <div class="row">
    <div class="column col-8 offset-2">
      <br />
      <h1>Create New Rest Places</h1>
      <br />
      <form
        method="post"
        action="/listing"
        class="needs-validation"
        novalidate
        enctype="multipart/form-data">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            class="form-control"
            name="listing[title]"
            placeholder="Enter Title"
            id="title"
            required />
          <div class="valid-feedback">Title Looks Good</div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            id="description"
            class="form-control"
            type="text"
            name="listing[description]"
            placeholder="Enter description"
            required></textarea>
          <div class="invalid-feedback">Please enter a short description</div>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Upload Listing Image</label>
          <input
            id="image"
            class="form-control"
            type="file"
            name="listing[image]" />
          <div class="invalid-feedback">Gotta give us the image URL/Link</div>
          <div class="valid-feedback">Image Looks Good</div>
        </div>
        <div class="row">
          <div class="mb-3 col-12 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input
              id="price"
              type="number"
              name="listing[price]"
              class="form-control"
              placeholder="Enter Price"
              required />

            <div class="invalid-feedback">price Should be valid</div>
            <div class="valid-feedback">Price Looks Good</div>
          </div>
          <div class="mb-3 col-12 col-md-8">
            <label for="Country" class="form-label">Country</label>
            <input
              type="text"
              class="form-control"
              id="Country"
              name="listing[Country]"
              placeholder="Enter Country"
              required />
            <div class="invalid-feedback">Country should be valid</div>
          </div>
        </div>
        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input
            id="location"
            class="form-control"
            type="text"
            name="listing[location]"
            placeholder="Enter Location"
            required />
          <div class="invalid-feedback">Location Should be Valid</div>
        </div>

        <button class="add-btn">Create</button>
      </form>
      <br /><br />
    </div>
  </div>
</body>
