<% layout("/layouts/boilerplate.ejs") %>
<ul></ul>
<body>
  <header>
    <div class="logo"><h3>All Listings</h3></div>
    <!-- <div class="nav">listings wagera</div> -->
    <!-- <a href="/listing/new">
      <button>Add New</button>
    </a> -->
  </header>
  <div class="row row-cols-1 row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let el of data){ %>
    <a href="/listing/<%=el._id %>" class="listing_link">
      <div class="card col listing-card" style="height: 25rem">
        <img
          style="object-fit: cover; height: 17rem; object-fit: cover"
          src="<%=el.image.url %>"
          class="card-img-top"
          alt="..." />
        <div class="card-img-overlay" style="color: red">
          <i class="fa-brands fa-airbnb"></i>
        </div>
        <div class="card-body">
          <b class="card-text"><%=el.title %></b>
          <p class="card-text">
            &#8377;<%=el.price.toLocaleString("en-In") %>/ night
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>
